---
export interface Props {
    title?: string;
    body: string;
    dark?: boolean;
    btn?: boolean;
    button_text?: string;
}

const {
    title,
    body,
    dark = false,
    btn = false,
    button_text,
} = Astro.props as Props;
---

<div class={`card ${dark && "dark"}`}>
    <h3>{title}</h3>
    <p>{body}</p>
    {
        btn && (
            <>
                <a class="btn">{button_text}</a>
            </>
        )
    }
</div>

<style>
    .card {
        background: #fff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
    }
    .dark {
        background: var(--color-primary);
        color: #fff;
    }
</style>
